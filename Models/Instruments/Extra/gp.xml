<!-- The OMEGA Hangar's A321 Extra panels made by the omega hangar -->

<PropertyList>

 <path>gear-panel.ac</path>

<!-- Animations *APPRBtnLt is now fixed*-->

	<animation>
		<type>pick</type>
		<object-name>GL</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-toggle</command>
				<property>/controls/gear[1]/gear-down</property>
			</binding>
		</action>
	</animation>

	<animation>
		<type>pick</type>
		<object-name>GC</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-toggle</command>
				<property>/controls/gear[0]/gear-down</property>
			</binding>
		</action>
	</animation>

	<animation>
		<type>pick</type>
		<object-name>GR</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-toggle</command>
				<property>/controls/gear[2]/gear-down</property>
			</binding>
		</action>
	</animation>

	<animation>
		<name>Gear Left Light</name>
		<type>select</type>
		<object-name>LightL</object-name>
		<condition>
			<property>/controls/gear[1]/gear-down</property>
		</condition>
	</animation>

	<animation>
		<name>Gear Right Light</name>
		<type>select</type>
		<object-name>LightR</object-name>
		<condition>
			<property>/controls/gear[2]/gear-down</property>
		</condition>
	</animation>

	<animation>
		<name>Gear Nose Light</name>
		<type>select</type>
		<object-name>LightC</object-name>
		<object-name>LightL</object-name>
		<condition>
			<property>/controls/gear[0]/gear-down</property>
		</condition>
	</animation>

</PropertyList>
