<!--
Liam Gathercole A340 Radio implanted on A321-211
-->

<PropertyList>

    <path>radio.ac</path>

    <animation>
        <type>select</type>
        <object-name>Radio.pwr</object-name>
        <object-name>freq</object-name>
        <object-name>freq.001</object-name>
        <object-name>freq.002</object-name>
        <object-name>freq.003</object-name>
        <object-name>freq.004</object-name>
        <object-name>freq.005</object-name>
        <object-name>stby</object-name>
        <object-name>stby.001</object-name>
        <object-name>stby.002</object-name>
        <object-name>stby.003</object-name>
        <object-name>stby.004</object-name>
        <object-name>stby.005</object-name>
        <condition>
            <property>instrumentation/nav[1]/serviceable</property>
        </condition>
    </animation>

<!-- Active freq-->
    <animation>
        <type>textranslate</type>
        <object-name>freq.001</object-name>
        <property>instrumentation/nav[1]/frequencies/selected-mhz</property>
        <factor>0.001</factor>
        <step>100</step>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>freq.002</object-name>
        <property>instrumentation/nav[1]/frequencies/selected-mhz</property>
        <factor>0.01</factor>
        <step>10</step>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>freq.003</object-name>
        <property>instrumentation/nav[1]/frequencies/selected-mhz</property>
        <factor>0.1</factor>
        <step>1</step>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>freq.004</object-name>
        <property>instrumentation/nav[1]/frequencies/selected-mhz</property>
        <factor>1.0</factor>
        <step>0.1</step>
        <bias>0.005</bias>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>freq.005</object-name>
        <property>instrumentation/nav[1]/frequencies/selected-mhz</property>
        <factor>10.0</factor>
        <step>0.01</step>
        <bias>0.005</bias>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

<!-- Standby freq-->
    <animation>
        <type>textranslate</type>
        <object-name>stby.001</object-name>
        <property>instrumentation/nav[1]/frequencies/standby-mhz</property>
        <factor>0.001</factor>
        <step>100</step>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>stby.002</object-name>
        <property>instrumentation/nav[1]/frequencies/standby-mhz</property>
        <factor>0.01</factor>
        <step>10</step>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>stby.003</object-name>
        <property>instrumentation/nav[1]/frequencies/standby-mhz</property>
        <factor>0.1</factor>
        <step>1</step>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>stby.004</object-name>
        <property>instrumentation/nav[1]/frequencies/standby-mhz</property>
        <factor>1.0</factor>
        <step>0.1</step>
        <bias>0.005</bias>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>stby.005</object-name>
        <property>instrumentation/nav[1]/frequencies/standby-mhz</property>
        <factor>10.0</factor>
        <step>0.01</step>
        <bias>0.005</bias>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

<!-- Hotspots -->
    <animation>
        <type>pick</type>
        <object-name>swp.btn</object-name>
        <visible>true</visible>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
             <binding>
                <command>property-swap</command>
                <property>instrumentation/nav[1]/frequencies/selected-mhz</property>
                <property>instrumentation/nav[1]/frequencies/standby-mhz</property>
            </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>stby.up</object-name>
        <visible>false</visible>
        <action>
            <button>0</button>
            <repeatable>true</repeatable>
            <interval-sec>0.2</interval-sec>
             <binding>
            <property>instrumentation/nav[1]/frequencies/standby-mhz</property>
            <step>0.05</step>
            <min>108.00</min>
            <max>118.00</max>
            <wrap>true</wrap>
            </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>stby.dn</object-name>
        <visible>false</visible>
        <action>
            <button>0</button>
            <repeatable>true</repeatable>
            <interval-sec>0.2</interval-sec>
             <binding>
            <property>instrumentation/nav[1]/frequencies/standby-mhz</property>
            <step>-0.05</step>
            <min>108.00</min>
            <max>118.00</max>
            <wrap>true</wrap>
            </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>stby.up</object-name>
        <visible>false</visible>
        <action>
            <button>1</button>
            <repeatable>true</repeatable>
            <interval-sec>0.2</interval-sec>
             <binding>
            <property>instrumentation/nav[1]/frequencies/standby-mhz</property>
            <step>1.0</step>
            <min>108.00</min>
            <max>118.00</max>
            <wrap>true</wrap>
            </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>stby.dn</object-name>
        <visible>false</visible>
        <action>
            <button>1</button>
            <repeatable>true</repeatable>
            <interval-sec>0.2</interval-sec>
             <binding>
            <property>instrumentation/nav[1]/frequencies/standby-mhz</property>
            <step>-1.0</step>
            <min>108.00</min>
            <max>118.00</max>
            <wrap>true</wrap>
            </binding>
        </action>
    </animation>

</PropertyList>
