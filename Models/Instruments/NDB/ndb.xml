<PropertyList>
<path>EFIS.ac</path>

<!-- Flood Light Illumination -->
<animation>		
		<name>Flood Light illumination</name>
		<type>material</type>
		<object-name>Border</object-name>
		<emission>
			<red>0.32</red>
			<green>0.32</green>
			<blue>0.32</blue>
			<factor-prop>controls/lighting/flood</factor-prop>
		</emission>
	</animation>

    <panel>
        <path>Aircraft/A321/Models/Instruments/NDB/NDB-panel.xml</path>
        <bottom-left>
            <x-m>0.003</x-m>
            <y-m>-0.090</y-m>
            <z-m>-0.087</z-m>
        </bottom-left>
        <bottom-right>
            <x-m>0.003</x-m>
            <y-m>0.090</y-m>
            <z-m>-0.087</z-m>
        </bottom-right>
        <top-left>
            <x-m>0.003</x-m>
            <y-m>-0.090</y-m>
            <z-m>0.094</z-m>
        </top-left>
    </panel>

</PropertyList>
